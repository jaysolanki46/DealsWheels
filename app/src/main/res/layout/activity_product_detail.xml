<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/item_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/fruit"/>

        <ImageButton
            android:transitionName="product_image"
            android:id="@+id/category_image"
            android:layout_width="160dp"
            android:layout_height="140dp"
            android:layout_below="@+id/item_image"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="28dp"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="-59dp"
            android:elevation="25dp"
            android:padding="2dp"
            android:scaleType="fitXY"
            android:background="@drawable/radius"
            android:src="@drawable/fruits" />

        <RelativeLayout
            android:id="@+id/profile_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_image"
            android:elevation="4dp">


            <TextView
                android:transitionName="product_name"
                android:id="@+id/item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="220dp"
                android:text="Strawberry"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_layout"
            android:layout_marginTop="50dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="#CC000000"
                android:layout_margin="10dp">

                <Button
                    android:id="@+id/btn_paknsave"
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:text="Pak n' Save"
                    android:textColor="@color/colorAccent"
                    android:background="#CC000000"
                    />

                <TextView
                    android:id="@+id/textview_price_paknsave"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="100dp"
                    android:textSize="16sp"
                    android:textColor="@color/colorAccent"
                    android:layout_toRightOf="@id/btn_paknsave"
                    android:text="$10.00"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:text="* Including all tax"
                    android:textSize="16sp"
                    android:layout_toEndOf="@+id/btn_paknsave"
                    android:layout_alignParentBottom="true"
                    android:textColor="@color/colorAccent"
                    android:layout_below="@id/textview_price_paknsave"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="#CC000000"
                android:layout_margin="10dp">

                <Button
                    android:id="@+id/btn_coundown"
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:text="Coundown"
                    android:textColor="@color/colorAccent"
                    android:background="#CC000000"/>

                <TextView
                    android:id="@+id/textview_price_coundown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="100dp"
                    android:textSize="16sp"
                    android:textColor="@color/colorAccent"
                    android:layout_toRightOf="@id/btn_coundown"
                    android:text="$10.00"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:text="* Including all tax"
                    android:textSize="16sp"
                    android:layout_toEndOf="@+id/btn_coundown"
                    android:layout_alignParentBottom="true"
                    android:textColor="@color/colorAccent"
                    android:layout_below="@id/textview_price_coundown"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="#CC000000"
                android:layout_margin="10dp">

                <Button
                    android:id="@+id/btn_newworld"
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:text="New World"
                    android:textColor="@color/colorAccent"
                    android:background="#CC000000"/>

                <TextView
                    android:id="@+id/textview_price_newworld"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="100dp"
                    android:textSize="16sp"
                    android:textColor="@color/colorAccent"
                    android:layout_toRightOf="@id/btn_newworld"
                    android:text="N/A"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:text="* Including all tax"
                    android:textSize="16sp"
                    android:layout_toEndOf="@+id/btn_newworld"
                    android:layout_alignParentBottom="true"
                    android:textColor="@color/colorAccent"
                    android:layout_below="@id/textview_price_newworld"/>

            </RelativeLayout>


        </LinearLayout>
    </RelativeLayout>
</ScrollView>

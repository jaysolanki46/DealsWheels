<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorheader"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:transitionName="product_image"
            android:id="@+id/product_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/fruits" />

        <RelativeLayout
            android:id="@+id/profile_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_image"
            android:elevation="4dp">


            <TextView
                android:transitionName="product_name"
                android:id="@+id/product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_margin="20dp"
                android:layout_centerHorizontal="true"
                android:text="Strawberry"
                android:textColor="@color/colorfont"
                android:textSize="25dp"
                />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_layout"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/card_pak_n_save"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                app:cardCornerRadius="10dp"
                android:layout_margin="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorcard1"
                    android:paddingLeft="0dp">

                    <TextView
                        android:id="@+id/txt_pak_n_save"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:text="Pak N Save"
                        android:textSize="40dp"
                        android:textColor="@color/colorfont"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"/>



                    <TextView
                        android:id="@+id/price_pak_n_save"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:text="$10.00"
                        android:textColor="@color/colorfont"
                        android:layout_toRightOf="@id/txt_pak_n_save"
                        android:layout_marginTop="40dp"/>

                    <TextView
                        android:id="@+id/txt_tax_pak_n_save"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="* Including all tax"
                        android:textSize="15sp"
                        android:textColor="@color/colorfont"
                        android:layout_toRightOf="@id/txt_pak_n_save"
                        android:layout_below="@+id/price_pak_n_save"/>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_coundown"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                app:cardCornerRadius="10dp"
                android:layout_margin="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorcard2"
                    android:paddingLeft="0dp">

                    <TextView
                        android:id="@+id/txt_coundown"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:text="Coundown"
                        android:textSize="40dp"
                        android:textColor="@color/colorfont"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"/>



                    <TextView
                        android:id="@+id/price_coundown"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:text="$10.00"
                        android:textColor="@color/colorfont"
                        android:layout_toRightOf="@id/txt_coundown"
                        android:layout_marginTop="40dp"/>

                    <TextView
                        android:id="@+id/txt_tax_coundown"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="* Including all tax"
                        android:textSize="15sp"
                        android:textColor="@color/colorfont"
                        android:layout_toRightOf="@id/txt_coundown"
                        android:layout_below="@+id/price_coundown"/>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_new_world"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                app:cardCornerRadius="10dp"
                android:layout_margin="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorcard3"
                    android:paddingLeft="0dp">

                    <TextView
                        android:id="@+id/txt_new_world"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:text="New World"
                        android:textSize="40dp"
                        android:textColor="@color/colorfont"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"/>



                    <TextView
                        android:id="@+id/price_new_world"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:text="$10.00"
                        android:textColor="@color/colorfont"
                        android:layout_toRightOf="@id/txt_new_world"
                        android:layout_marginTop="40dp"/>

                    <TextView
                        android:id="@+id/txt_tax_new_world"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="* Including all tax"
                        android:textSize="15sp"
                        android:textColor="@color/colorfont"
                        android:layout_toRightOf="@id/txt_new_world"
                        android:layout_below="@+id/price_new_world"/>

                </RelativeLayout>

            </android.support.v7.widget.CardView>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#EEF2F5"
    android:orientation="vertical"
    android:padding="16dp">

    <android.support.v7.widget.CardView
        android:id="@+id/card_list"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:onClick="getProductDetail"
        app:cardCornerRadius="7dp"
        android:foreground="?android:attr/selectableItemBackground">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="4dp"
            android:background="#3E4B5B"
            android:padding="16dp">

            <ImageView
                android:id="@+id/product_image"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_marginRight="18dp"
                android:scaleType="centerCrop"
                android:background="@drawable/radius"/>

            <TextView
                android:id="@+id/product_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:textAlignment="center"
                android:text="Product"
                android:textSize="24sp"
                android:textColor="#ffffff"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/product_image"/>

            <TextView
                android:id="@+id/id_max"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Max : "
                android:textSize="16sp"
                android:textColor="#FF6347"
                android:layout_marginLeft="225dp"/>

            <TextView
                android:id="@+id/product_price_max"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$10.00"
                android:textSize="16sp"
                android:textColor="#FF6347"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@id/id_max"/>

            <TextView
                android:id="@+id/id_min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Min  :"
                android:textSize="16sp"
                android:textColor="#FF6347"
                android:layout_marginLeft="225dp"
                android:layout_below="@id/id_max"/>

            <TextView
                android:id="@+id/product_price_min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$08.00"
                android:textSize="16sp"
                android:textColor="#FF6347"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@id/id_max"
                android:layout_below="@+id/product_price_max"/>

            <TextView
                android:id="@+id/product_store"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:textAlignment="center"
                android:text="2 stores"
                android:textSize="16sp"
                android:textColor="#FF6347"
                android:layout_marginLeft="225dp"
                android:layout_below="@+id/id_min"/>


        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
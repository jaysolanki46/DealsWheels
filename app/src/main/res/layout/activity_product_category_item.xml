<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#EEF2F5"
    android:orientation="vertical"
    android:padding="16dp">

    <android.support.v7.widget.CardView
        android:id="@+id/card_list_product_category"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:onClick="getProducts"
        app:cardCornerRadius="7dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="4dp"
            android:background="#3E4B5B">

            <TextView
                android:id="@+id/product_category_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/product_category_name"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Fruit"
                android:textSize="24sp"
                android:textColor="#ffffff"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"/>

            <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/product_category_name"
            android:layout_centerVertical="true"
            android:src="@drawable/baseline_keyboard_arrow_right_black_18dp"/>


        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>